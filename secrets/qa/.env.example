# School Attendance - QA Environment
# Copiar este archivo a .env y completar los valores

# Application
APP_ENV=qa
APP_NAME=school-attendance

# Database
DB_USER=school_attendance
DB_PASSWORD=<strong-password>
DB_NAME=school_attendance
DB_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# S3/MinIO Storage
S3_ENDPOINT=http://minio:9000
S3_BUCKET=attendance-photos-qa
S3_ACCESS_KEY=<minio-access-key>
S3_SECRET_KEY=<minio-secret-key>
S3_REGION=us-east-1
S3_SECURE=false

# Security (generar con: openssl rand -hex 32)
SECRET_KEY=<generate-secure-key>
DEVICE_API_KEY=<generate-secure-key>

# Notifications
SES_SOURCE_EMAIL=attendance-qa@yourdomain.com
WHATSAPP_ACCESS_TOKEN=<whatsapp-token>
WHATSAPP_PHONE_NUMBER_ID=<phone-number-id>
ENABLE_REAL_NOTIFICATIONS=false

# CORS
CORS_ORIGINS=["https://school-attendance.qa.gocode.cl"]

# WebAuthn / Biometric Authentication
WEBAUTHN_RP_ID=school-attendance.qa.gocode.cl
WEBAUTHN_RP_NAME=Sistema Asistencia Escolar QA
WEBAUTHN_RP_ORIGIN=https://school-attendance.qa.gocode.cl
WEBAUTHN_TIMEOUT_MS=60000

# Rate Limiting
RATE_LIMIT_DEFAULT=100/minute

# Docker (appctl usa net-<env> con gui√≥n)
DOCKER_NETWORK=net-qa
REGISTRY_USER=moffermann
IMAGE_TAG=latest
