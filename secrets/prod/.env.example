# School Attendance - Production Environment
# Copiar este archivo a .env y completar los valores
# IMPORTANTE: Nunca commitear este archivo con valores reales

# Application
APP_ENV=production
APP_NAME=school-attendance

# Database
DB_USER=school_attendance
DB_PASSWORD=<strong-password>
DB_NAME=school_attendance
DB_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# S3 Storage (AWS o MinIO)
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=<your-production-bucket>
S3_ACCESS_KEY=<aws-access-key>
S3_SECRET_KEY=<aws-secret-key>
S3_REGION=us-east-1
S3_SECURE=true

# Security (OBLIGATORIO: generar con openssl rand -hex 32)
SECRET_KEY=<generate-secure-key>
DEVICE_API_KEY=<generate-secure-key>

# Notifications
SES_SOURCE_EMAIL=attendance@yourdomain.com
WHATSAPP_ACCESS_TOKEN=<whatsapp-token>
WHATSAPP_PHONE_NUMBER_ID=<phone-number-id>
ENABLE_REAL_NOTIFICATIONS=true

# CORS (or√≠genes permitidos, separados por coma)
CORS_ORIGINS=https://yourdomain.com,https://kiosk.yourdomain.com

# Rate Limiting
RATE_LIMIT_DEFAULT=100/minute

# Ports
API_PORT=8080

# Docker
DOCKER_NETWORK=net-prod
REGISTRY_USER=moffermann
IMAGE_TAG=<specific-version-tag>
