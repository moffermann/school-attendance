# School Attendance - Development Environment
# Copiar este archivo a .env y completar los valores

# Application
APP_ENV=development
APP_NAME=school-attendance

# Database
DB_USER=school_attendance
DB_PASSWORD=school_attendance
DB_NAME=school_attendance
DB_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# S3/MinIO Storage
S3_ENDPOINT=http://minio:9000
S3_BUCKET=attendance-photos
S3_ACCESS_KEY=dev-access
S3_SECRET_KEY=dev-secret
S3_REGION=us-east-1
S3_SECURE=false

# Security (cambiar en producción!)
SECRET_KEY=dev-secret-key-change-in-production
DEVICE_API_KEY=dev-device-key-change-in-production

# Notifications (opcional en dev)
SES_SOURCE_EMAIL=no-reply@example.com
WHATSAPP_ACCESS_TOKEN=dummy
WHATSAPP_PHONE_NUMBER_ID=dummy
ENABLE_REAL_NOTIFICATIONS=false

# CORS (vacío permite todos los orígenes en dev)
CORS_ORIGINS=

# Rate Limiting
RATE_LIMIT_DEFAULT=100/minute

# Ports
API_PORT=8080
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
RQ_DASHBOARD_PORT=9181

# Docker
DOCKER_NETWORK=net_dev
REGISTRY_USER=moffermann
IMAGE_TAG=latest
