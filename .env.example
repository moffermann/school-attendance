# Core settings
APP_ENV=development
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=change-me
JWT_ACCESS_EXPIRES_MIN=15
JWT_REFRESH_EXPIRES_DAYS=7
PUBLIC_BASE_URL=http://localhost:8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./dev.db

# Redis / RQ
REDIS_URL=redis://redis:6379/0

# Object storage (MinIO for dev)
S3_ENDPOINT=http://minio:9000
S3_BUCKET=attendance-photos
S3_ACCESS_KEY=dev-access
S3_SECRET_KEY=dev-secret
S3_REGION=us-east-1
S3_SECURE=false
PHOTO_RETENTION_DAYS=60

# External providers (stubs in dev)
WHATSAPP_ACCESS_TOKEN=replace
WHATSAPP_PHONE_NUMBER_ID=replace
SES_REGION=us-east-1
SES_SOURCE_EMAIL=no-reply@example.com

# Rate limiting
RATE_LIMIT_DEFAULT=100/minute

# Feature flags
ENABLE_REAL_NOTIFICATIONS=false
NO_SHOW_GRACE_MINUTES=15
DEVICE_API_KEY=device-secret
